{
  "name": "@puremvc/puremvc-typescript-util-statemachine",
  "version": "1.0.0",
  "description": "PureMVC State Machine Utility for TypeScript",
  "main": "bin/cjs/index.js",
  "module": "bin/esm/index.js",
  "types": "bin/types/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "require": "./bin/cjs/index.cjs",
      "import": "./bin/esm/index.js"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run build:lib",
    "build:lib": "npm run build:cjs && npm run build:esm",
    "build:esm": "tsc --module esnext --outDir bin/esm",
    "build:cjs": "tsc --module commonjs --outDir bin/cjs",
    "build:doc": "typedoc",
    "clean": "rm -rf bin",
    "format": "prettier --write ./src",
    "typecheck": "tsc --noEmit -p tsconfig.json --composite false",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "directories": {
    "doc": "docs",
    "test": "test",
    "bin": "bin"
  },
  "dependencies": {
    "@puremvc/puremvc-typescript-multicore-framework": "^2.0.2",
    "typescript": "^5.7.3"},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "@types/jest": "^29.5.14",
    "esbuild": "^0.25.0",
    "prettier": "^3.5.1",
    "ts-jest": "^29.2.5",
    "eslint": "^9.20.1",
    "jest": "^29.7.0",
    "zod": "^3.24.2"
  }
}
